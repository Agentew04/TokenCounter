<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:TokenCounter.ViewModels"
             x:Class="TokenCounter.Views.MainPage"
             x:DataType="vm:MainViewModel"
             Title="Login">
    <ContentPage.Resources>
        <ResourceDictionary>
            <tk:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout HorizontalOptions="Center" MinimumWidthRequest="500" VerticalOptions="Center">
        <Label Text="Username: " HorizontalOptions="StartAndExpand" Margin="4"/>
        <Entry Text="{Binding Username}" Margin="0,0,0,15" />
        <Label Text="Password: " HorizontalOptions="StartAndExpand" Margin="4"/>
        <Entry Text="{Binding Password}" IsPassword="True" Margin="0,0,0,15"/>
        <Button Text="Login" Command="{Binding LoginCommand}" Margin="15" Padding="5"
                MaximumWidthRequest="200" IsEnabled="{Binding IsWorking, Converter={StaticResource InvertedBoolConverter }}"/>
        <ProgressBar IsVisible="{Binding IsWorking}" HorizontalOptions="Fill"/>
    </StackLayout>
</ContentPage>
